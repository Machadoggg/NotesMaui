<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.DatePage"
             Title="Fecha">

    <FlexLayout Direction="Column">
        <VerticalStackLayout Padding="10" FlexLayout.Basis="400">
            <Entry x:Name="nameEntryfield" Placeholder="Nombre" />
            <DatePicker x:Name="datePickerfield" />
            <TimePicker x:Name="timePickerfield" />
            <Button Text="Programar NotificaciÃ³n" Clicked="OnScheduleNotificationClicked" />
        </VerticalStackLayout>
        <ScrollView>
            <VerticalStackLayout>
                <ListView x:Name="listView" FlexLayout.Grow="1" HasUnevenRows="True" ItemTapped="listView_ItemTapped2">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout Padding="5">
                                    <Label Text="{Binding NotifyName}" FontSize="17" FontAttributes="Bold" />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="{Binding Date}" />
                                        <Label Grid.Column="2" Text="{Binding Hour}" FontAttributes="Bold" />
                                    </Grid>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        </ScrollView>
    </FlexLayout>
</ContentPage>